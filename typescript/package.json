{
  "name": "typescript-apollo-server",
  "version": "1.0.0",
  "description": "experimentation",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix src --ext=.ts",
    "test": "jest",
    "test:watch": "jest --verbose --detectOpenHandles",
    "test:cov": "jest --coverage",
    "start:build": "npm run build:dist && node 'dist/index.js'",
    "copy-files": "mkdir dist/resources || true && cp -R src/resources/** dist/resources/",
    "start": "ts-node src/index.ts",
    "build": "nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql",
    "build:dist": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/sylhare/Apollo.git"
  },
  "keywords": [
    "apollo",
    "graphql",
    "server"
  ],
  "author": "sylhare",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sylhare/Apollo/issues"
  },
  "homepage": "https://github.com/sylhare/Apollo#readme",
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@apollo/federation": "^0.37.1",
    "@graphql-tools/schema": "^8.3.14",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/node": "^14.14.37",
    "@types/uuid": "^8.3.1",
    "apollo-server-express": "^2.26.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-fields-list": "^2.2.4",
    "graphql-parse-resolve-info": "^4.12.3",
    "helmet": "^4.4.1",
    "http": "^0.0.1-security",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.20",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^7.32.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.5"
  }
}
